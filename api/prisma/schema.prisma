datasource db {
  provider = "mysql"
}

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

model User {
  id            Int      @id @default(autoincrement())
  name          String?
  email         String   @unique
  password_hash String
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
